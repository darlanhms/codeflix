{
  "compilerOptions": {
    "incremental": true,                              
    "target": "es2017",                               
    "module": "commonjs",                             
    "baseUrl": "./src",                               
    "outDir": "./build",                                
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true                              
  },
  "include": ["./src"]
}
